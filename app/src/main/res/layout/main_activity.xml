<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/Sumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bSuma" android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"/>
    <FrameLayout
            android:layout_width="368dp"
            android:layout_height="370dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:id="@+id/flfrag">

    </FrameLayout>
    <EditText
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etN1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etN2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="124dp"/>
    <Button
            android:text="@string/bMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bMulti" android:layout_marginEnd="45dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/bSuma"/>
    <Button
            android:text="@string/bResta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bResta" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/bMulti" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="46dp"/>
    <Button
            android:text="@string/bDivi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bDivi" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/bMulti" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"/>

</android.support.constraint.ConstraintLayout>